    field(PINI, "1")
}

record(calc, "$(P)PowerOnStatusCalc"){
    field(DESC, "Power On status calc")
    field(INPA, "$(P)StatusMsg")
    field(CALC, "A=3")
    field(FLNK, "$(P)PowerOnStatus")
}

record(bi, "$(P)PowerOnStatus"){
    field(DESC, "Power On status")
    field(INP,  "$(P)PowerOnStatusCalc")
    field(ZNAM, "Off")
    field(ONAM, "On")
}

